<h1 style = color:red>Create an article</h1>

<%= form_for @article do |f| %>
    <p style = color:dodgerblue>
      <%= f.label :title %><br/>
      <%= f.text_field :title %>
    </p>

    <p style = color:dodgerblue>
      <%= f.label :description %><br/>
      <%= f.text_area :description %>
    </p>

    <p style = color:dodgerblue>
      <%= f.submit %>
    </p>


<%end%>